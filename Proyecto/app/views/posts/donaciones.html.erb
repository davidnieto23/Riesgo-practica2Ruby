<%= javascript_include_tag "https://www.google.com.jsapi", "chartkick"%>
<h1>Mis donaciones</h1>

<table>
  <thead>
    <tr>
      <th>Sangre</th>
      <th>Comentario</th>
      <th>Solicitante</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>E-Mail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publicaciones.each do |post| %>
      <tr>
        <td><%= post.sangre %></td>
        <td><%= post.comentario %></td>
        
<% if post.solved %>
<%= user = Usuario.find(post.usuario_id) %>
      <td><%=user.nombre%></td>
      <td><%=user.direccion%></td>
      <td><%=user.telefono%></td>
      <td><%=user.email%></td>
      
<% end %>   

      </tr>


 <% end %>
  </tbody>
</table>

<%= pie_chart Post.group(:sangre).count%>
<br>

<%= link_to 'New Post', new_post_path %>
