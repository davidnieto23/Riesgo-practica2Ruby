
<p id="notice"><%= notice %></p>

<h1>Postulate para donar sangre</h1>



<table>
  <thead>
    <tr>
      <th>Sangre</th>
      <th>Comentario</th>
      <th>Solved</th>
      <th>Usuario</th>
      <th>Donador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publicaciones.each do |post| %>
      <tr>



<% if current_usuario.id != post.donador_id%>
        <td><%= post.sangre %></td>
        <td><%= post.comentario %></td>
        <td><%= post.solved %></td>
        <td><%= post.usuario_id %></td>
        <td><%= post.donador_id %></td>

<% if post.solved %>
<%= donador = Usuario.find(post.donador_id) %>

        <td><%= donador.nombre%></td>
        <td><%= donador.telefono%></td>

<%elsif current_usuario.tipoDeSangre == post.sangre%>
<td><%= link_to 'Postulate', donaste_path(post.id) %></td>
<% end %>
<% end %>


  <div class="actions">
  </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>