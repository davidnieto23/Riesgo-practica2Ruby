
<p id="notice"><%= notice %></p>

<h1>Postulate para donar sangre</h1>



<table>
  <thead>
    <tr>
      <th>Sangre</th>
      <th>Comentario</th>
      <th>Solicitante</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publicaciones.each do |post| %>
      <tr>



<% if !post.solved%>
        <td><%= post.sangre %></td>
        <td><%= post.comentario %></td>
        <%= donador = Usuario.find(post.usuario_id) %>
        <td><%= donador.nombre %></td>

<% if (!post.solved) && current_usuario.tipoDeSangre == post.sangre %>
<td><%= link_to 'Postulate', donaste_path(post.id) %></td>
<% end %>
<% end %>


  <div class="actions">
  </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>